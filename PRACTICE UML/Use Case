@startuml
actor Клиент
package Специалисты {
actor Кассир as k
actor Операционист as o
}
actor ФНС
rectangle "Банк"{
Клиент-- (Открытие вклада)
o-- (Идентификация клиента)
o-- (Открытие вклада)
(Открытие вклада).> (Идентификация клиента): //<<include>>//
o-- (Работа с досье)
(Открытие вклада).> (Работа с досье): //<<include>>//
(Открытие вклада) <|-- (Выбор условий вклада)
(Работа с досье)<. (Создание нового досье): //<<extend>>//
(Работа с досье)<. (Актуализация старого досье): //<<extend>>//
o-- (Оформление договора)
(Открытие вклада).> (Оформление договора): //<<include>>//
(Открытие вклада) <|-- (Открытие с внесением наличных)
(Открытие вклада) <|-- (Открытие с внесением безналичных)
k-- (Зачисление средств)
(Зачисление средств)<. (Открытие с внесением наличных): //<<include>>//
o-- (Перевод средств)
(Перевод средств)<. (Открытие с безналичных): //<<include>>//
(Открытие вклада).> (Печать договора): //<<include>>//
(Открытие вклада).> (Создание отчета об открытии вклада для ФНС): //<<include>>//
ФНС-- (Создание отчета об открытии вклада для ФНС)
o-- (Закрытие вклада)
ФНС-- (Создание отчета о закрытии вклада для ФНС)
(Закрытие вклада).> (Создание отчета о закрытии вклада для ФНС): //<<include>>//
Клиент-- (Закрытие вклада)
}
@enduml
